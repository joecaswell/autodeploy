[
    {autodeploy, [
        {apps, [
            % NB: proplist key must be a string matching
            % "repository object" name field returned by GH webhook
            {"autodeploy", [
                {full_name, "lukebakken/autodeploy"},
                {clone_path, "/home/autodeploy/autodeploy-src"},
                {ref, "refs/heads/master"},
                {monit_name, "autodeploy"},
                {env_secret_var, "SECRET_autodeploy"},
                {user, "autodeploy"},
                {group, "autodeploy"},
                {gitargs, "--single-branch --branch master"}
            ]},
            {"zendesk-sms", [
                {full_name, "basho/zendesk-sms"},
                {clone_path, "/home/zdsms/zendesk-sms"},
                {ref, "refs/heads/master"},
                {monit_name, "zendesk-sms"},
                {env_secret_var, "SECRET_zendesk_sms"},
                {user, "zdsms"},
                {group, "zdsms"},
                {gitargs, "--single-branch --branch master"}
            ]},
            {"zendesk-sms", [
                {full_name, "basho/zendesk-sms"},
                {clone_path, "/home/zdsms/zdsms"},
                {ref, "refs/heads/erl-rewrite"},
                {monit_name, "zdsms"},
                {env_secret_var, "SECRET_zendesk_sms"},
                {user, "zdsms"},
                {group, "zdsms"},
                {gitargs, "--single-branch --branch erl-rewrite"}
            ]},
            {"services_phone", [
                {full_name, "basho/services_phone"},
                {clone_path, "/home/twiml/live"},
                {ref, "refs/heads/live"},
                {monit_name, "service_phone_live"},
                {env_secret_var, "SECRET_services_phone"},
                {user, "twiml"},
                {group, "www-data"},
                {gitargs, "--single-branch --branch live"}
            ]},
            {"services_phone", [
                {full_name, "basho/services_phone"},
                {clone_path, "/home/twiml/dev"},
                {ref, "refs/heads/dev"},
                {monit_name, "service_phone_dev"},
                {env_secret_var, "SECRET_services_phone"},
                {user, "twiml"},
                {group, "www-data"},
                {gitargs, "--single-branch --branch dev"}
            ]}
        ]},
        {monit, [
            {url, "http://localhost:2812/"}, % NB: ends in slash
            {user, "admin"},
            {pass, "admin"}
        ]},
        {git, "/usr/bin/git"},
        {tmp_dir, "/tmp"}
    ]},
    {lager, [
        {error_logger_hwm,100},
        {error_logger_redirect,true},
        {crash_log_date,"$D0"},
        {crash_log_size,10485760},
        {crash_log_msg_size,65536},
        {handlers, [
            {lager_console_backend, debug},
            {lager_file_backend,
                [{file, "/var/log/autodeploy/debug.log"},
                    {level,debug},
                    {size,10485760},
                    {date,"$D0"},
                    {count,5}]},
            {lager_file_backend,
                [{file, "/var/log/autodeploy/console.log"},
                    {level,info},
                    {size,10485760},
                    {date,"$D0"},
                    {count,5}]},
            {lager_file_backend,
                [{file, "/var/log/autodeploy/error.log"},
                    {level,error},
                    {size,10485760},
                    {date,"$D0"},
                    {count,5}]}]},
        {crash_log, "/var/log/autodeploy/crash.log"},
        {crash_log_count,5}
    ]}
].
