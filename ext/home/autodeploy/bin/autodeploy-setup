#!/usr/bin/env bash

if [[ $(whoami) != 'root' ]]
then
  echo "[error] must be started as root user $(id)" 1>&2
  exit 1
fi

set -o errexit

for exec_port in $(find /home/autodeploy/autodeploy -type f -name exec-port)
do
  chown -v autodeploy:autodeploy "$exec_port"
  chmod -v 0755 "$exec_port"
done

set +o errexit

mkdir /var/log/autodeploy
chown -R autodeploy:autodeploy /var/log/autodeploy
mkdir /var/run/autodeploy
chown -R autodeploy:autodeploy /var/run/autodeploy
